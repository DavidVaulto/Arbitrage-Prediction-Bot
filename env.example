# Trading Mode: paper, live, backtest
MODE=paper

# Base currency for calculations
BASE_CCY=USD

# Starting balance for paper trading
STARTING_BALANCE_USD=10000

# Position sizing policy
SIZE_POLICY=kelly_fraction
KELLY_FRACTION=0.25

# Minimum edge in basis points to consider trade
MIN_EDGE_BPS=80

# Maximum slippage tolerance in basis points
MAX_SLIPPAGE_BPS=25

# Maximum open risk per trade in USD
MAX_OPEN_RISK_USD=3000

# Maximum per trade in USD
MAX_PER_TRADE_USD=1000

# Maximum position size per event in USD
MAX_POSITION_PER_EVENT_USD=5000

# Minimum notional size for opportunities
MIN_NOTIONAL_USD=100

# Alert webhook URL for notifications
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Polymarket API credentials
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_PRIVATE_KEY=your_polymarket_private_key

# Kalshi API credentials
KALSHI_API_KEY=your_kalshi_api_key
KALSHI_API_SECRET=your_kalshi_api_secret

# Database configuration
DATABASE_URL=sqlite:///./pm_arb.db

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health check and metrics
HEALTH_CHECK_PORT=8080
METRICS_PORT=9090

# Risk management
MAX_DRAWDOWN_PCT=10.0
CIRCUIT_BREAKER_ERROR_RATE=0.1
CIRCUIT_BREAKER_LATENCY_MS=5000

# Live trading confirmation (safety guard)
CONFIRM_LIVE=false

# Data refresh intervals (seconds)
DISCOVERY_INTERVAL=2
QUOTE_REFRESH_INTERVAL=1

# Fee overrides (basis points)
POLYMARKET_MAKER_BPS=0
POLYMARKET_TAKER_BPS=25
POLYMARKET_GAS_ESTIMATE_USD=0.50

KALSHI_MAKER_BPS=0
KALSHI_TAKER_BPS=30
